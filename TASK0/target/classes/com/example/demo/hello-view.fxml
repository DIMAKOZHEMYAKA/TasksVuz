<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="157.0" prefWidth="295.0" spacing="20.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <FlowPane prefHeight="0.0" prefWidth="255.0" rowValignment="TOP" style="-fx-border-color: black;">
      <children>
         <Label prefHeight="26.0" prefWidth="98.0" text="Сумма в чеке">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
         <TextField fx:id="sum" alignment="TOP_LEFT" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="84.0" />
         <Label prefHeight="26.0" prefWidth="70.0" text="Рублей">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
      </children>
   </FlowPane>
   <HBox prefHeight="34.0" prefWidth="255.0">
      <children>
         <RadioButton fx:id="radio1" alignment="TOP_LEFT" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#on1" text="15%" />
         <RadioButton fx:id="radio2" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#on2" text="10%" />
         <RadioButton fx:id="radio3" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#on3" text="9%" />
         <RadioButton fx:id="radio4" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#on4" text="3%" />
      </children>
   </HBox>
   <HBox prefHeight="54.0" prefWidth="255.0" style="-fx-background-color: light grey;">
      <children>
         <Button mnemonicParsing="false" onAction="#calculate" prefHeight="56.0" prefWidth="66.0" text="Calculate" />
         <Label fx:id="label1" alignment="CENTER" prefHeight="31.0" prefWidth="118.0" style="-fx-border-color: black;" text="result" />
         <Label prefHeight="31.0" prefWidth="70.0" text="Рублей">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
      </children>
   </HBox>
</VBox>
